{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "name": "io.github.egoughnour/curate-ipsum",
  "title": "Curate-Ipsum",
  "description": "Graph-spectral framework for verified code synthesis through belief revision, mutation testing, and CEGIS/CEGAR verification loops.",
  "version": "0.7.0",
  "websiteUrl": "https://github.com/egoughnour/curate-ipsum",
  "repository": {
    "url": "https://github.com/egoughnour/curate-ipsum",
    "type": "git"
  },
  "packages": [
    {
      "registryType": "pypi",
      "registryBaseUrl": "https://pypi.org",
      "identifier": "curate-ipsum",
      "version": "0.7.0",
      "transport": "stdio",
      "environmentVariables": [
        {
          "name": "CURATE_IPSUM_GRAPH_BACKEND",
          "required": false,
          "description": "Graph store backend: 'sqlite' (default) or 'kuzu'"
        },
        {
          "name": "MUTATION_TOOL_DATA_DIR",
          "required": false,
          "description": "Directory for persistent data (default: .mutation_tool_data)"
        },
        {
          "name": "MUTATION_TOOL_LOG_LEVEL",
          "required": false,
          "description": "Log level: DEBUG, INFO, WARNING, ERROR (default: INFO)"
        },
        {
          "name": "CHROMA_HOST",
          "required": false,
          "description": "ChromaDB server host for Docker mode (default: use ephemeral in-process)"
        },
        {
          "name": "EMBEDDING_MODEL",
          "required": false,
          "description": "sentence-transformers model name (default: all-MiniLM-L6-v2)"
        }
      ]
    },
    {
      "registryType": "oci",
      "registryBaseUrl": "https://ghcr.io",
      "identifier": "egoughnour/curate-ipsum",
      "version": "0.7.0",
      "transport": "stdio",
      "environmentVariables": [
        {
          "name": "CURATE_IPSUM_GRAPH_BACKEND",
          "required": false,
          "description": "Graph store backend: 'sqlite' (default) or 'kuzu'"
        },
        {
          "name": "CHROMA_HOST",
          "required": false,
          "description": "ChromaDB server host (default: use ephemeral in-process)"
        }
      ]
    }
  ]
}
