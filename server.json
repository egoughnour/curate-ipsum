{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "name": "io.github.egoughnour/curate-ipsum",
  "title": "Curate-Ipsum",
  "description": "Code synthesis through belief revision, mutation testing, and verification",
  "repository": {
    "url": "https://github.com/egoughnour/curate-ipsum",
    "source": "github"
  },
  "version": "2.0.4",
  "packages": [
    {
      "registryType": "pypi",
      "identifier": "curate-ipsum",
      "version": "2.0.4",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "name": "CURATE_IPSUM_GRAPH_BACKEND",
          "description": "Graph store backend: 'sqlite' (default) or 'kuzu'",
          "isRequired": false,
          "format": "string",
          "isSecret": false
        },
        {
          "name": "MUTATION_TOOL_DATA_DIR",
          "description": "Directory for persistent data (default: .mutation_tool_data)",
          "isRequired": false,
          "format": "string",
          "isSecret": false
        },
        {
          "name": "MUTATION_TOOL_LOG_LEVEL",
          "description": "Log level: DEBUG, INFO, WARNING, ERROR (default: INFO)",
          "isRequired": false,
          "format": "string",
          "isSecret": false
        },
        {
          "name": "CHROMA_HOST",
          "description": "ChromaDB server host for Docker mode (default: use ephemeral in-process)",
          "isRequired": false,
          "format": "string",
          "isSecret": false
        },
        {
          "name": "EMBEDDING_MODEL",
          "description": "sentence-transformers model name (default: all-MiniLM-L6-v2)",
          "isRequired": false,
          "format": "string",
          "isSecret": false
        }
      ]
    },
    {
      "registryType": "mcpb",
      "identifier": "https://github.com/egoughnour/curate-ipsum/releases/latest/download/curate-ipsum.mcpb",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "name": "CURATE_IPSUM_GRAPH_BACKEND",
          "description": "Graph store backend: 'sqlite' (default) or 'kuzu'",
          "isRequired": false,
          "format": "string",
          "isSecret": false
        },
        {
          "name": "MUTATION_TOOL_DATA_DIR",
          "description": "Directory for persistent data (default: .mutation_tool_data)",
          "isRequired": false,
          "format": "string",
          "isSecret": false
        }
      ],
      "version": "2.0.4"
    }
  ]
}
