# Purpose-built angr runner container
# Includes run_angr.py baked in â€” no need to mount the runner script
FROM angr/angr:latest

# Copy the runner into the image
COPY angr_adapter_baseline/verification/runners/run_angr.py /opt/runner/run_angr.py

WORKDIR /work

# Expect: -v <artifacts>:/work -v <binaries>:/bin_in:ro
ENTRYPOINT ["python", "/opt/runner/run_angr.py"]
CMD ["/work/request.json", "/work/response.json"]
