# RAG semantic search microservice (Chroma embedded + sentence-transformers)
FROM python:3.11-slim

WORKDIR /app

RUN pip install --no-cache-dir \
    chromadb>=0.4.0 \
    sentence-transformers>=2.2.0 \
    flask>=3.0.0

COPY src/quickverify/rag/ ./quickverify/rag/
RUN touch ./quickverify/__init__.py

EXPOSE 8080
# Placeholder — replace with actual server when ready
CMD ["python", "-c", "print('RAG service ready — implement server.py')"]
